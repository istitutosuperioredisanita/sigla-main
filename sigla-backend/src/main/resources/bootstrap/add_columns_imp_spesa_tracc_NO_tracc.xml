    <changeSet author="davide.mirra" dbms="oracle" id="add_columns_imp_spesa_tracc_NO_tracc">
        <addColumn tableName="MISSIONE">
            <column name="IM_SPESE_TRACC" type="NUMERIC(15,2)" remarks="Importo totale delle spese sostenuta con strumenti di pagamento tracciabili (carta di credito, bonifico, ecc.).">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="MISSIONE">
            <column name="IM_SPESE_NO_TRACC" type="NUMERIC(15,2)" remarks="Importo totale delle spese NON tracciate">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>