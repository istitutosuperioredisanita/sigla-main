	<columnSet
		name="default">
		<columnFieldProperty
			name="cd_anag" />
		<columnFieldProperty
			name="cd_terzo" />
		<columnFieldProperty
			name="nome" 
			columnStyle="text-align: left; padding-left:7px"		/>
		<columnFieldProperty
			name="cognome" 
			columnStyle="text-align: left; padding-left:7px"		/>
		<columnFieldProperty
			name="codice_fiscale"
			columnStyle="text-align: left; padding-left:7px"		/>
		<columnFieldProperty
			name="ti_sesso"
			columnStyle="text-align: left; padding-left:7px"		/>		
		<columnFieldProperty
			name="dt_nascita"
			columnStyle="text-align: left; padding-left:7px"		/>
	</columnSet>

	<formFieldProperty
		name="codice_fiscale" />
	<formFieldProperty
		name="cognome" />
	<formFieldProperty
		name="dt_nascita" />
	<formFieldProperty
		name="nome" />
	<formFieldProperty
		name="ti_sesso" />

	<form
		name="searchtool" >
		<formFieldProperty
			name="codice_fiscale" />
		<formFieldProperty
			name="cognome" />
		<formFieldProperty
			name="dt_nascita" />
		<formFieldProperty
			name="nome" />
		<formFieldProperty
			name="ti_sesso" />
	</form>

	<findFieldProperty
		name="codice_fiscale" />
	<findFieldProperty
		name="cognome" />
	<findFieldProperty
		name="dt_nascita" />
	<findFieldProperty
		name="nome" />
	<findFieldProperty
		name="ti_sesso" />


</bulkInfo>