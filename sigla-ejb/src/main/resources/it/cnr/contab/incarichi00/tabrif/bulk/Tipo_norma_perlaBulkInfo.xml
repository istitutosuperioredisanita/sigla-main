<bulkInfo
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://contab.cnr.it/schema/SIGLA" 
		xsi:schemaLocation="http://contab.cnr.it/schema/SIGLA https://contab.cnr.it/schema/SIGLA/BulkInfo_1_5.xsd">
	<fieldProperty
		name="cd_tipo_norma"
		property="cd_tipo_norma"
		inputType="TEXT"
		inputSize="3"
		maxLength="3"
		enabledOnSearch="true"
		nullable="false"
		label="Codice" />
	<fieldProperty
		name="ds_tipo_norma"
		property="ds_tipo_norma"
		inputType="TEXTAREA"
		cols="80"
		rows="2"
		maxLength="150"
		enabledOnSearch="true"
		nullable="false"
		label="Descrizione" />
	<fieldProperty
		name="tipo_associazione"
		property="tipo_associazione"
		inputType="SELECT"
		enabledOnInsert = "true"
		enabledOnEdit = "true"
		enabledOnSearch = "true"
		nullable="false"
		keysProperty="tipiAssociazioneKeys"
		label="Tipo Associazione" />
	<fieldProperty
		name="numero_tipo_norma"
		property="numero_tipo_norma"
		inputType="TEXT"
		inputSize="30"
		maxLength="30"
		nullable="false"
		enabledOnInsert = "true"
		enabledOnEdit = "true"
		enabledOnSearch = "false"
		label="Numero della Norma" />
	<fieldProperty
		name="cd_tipo_norma_perla"
		property="cd_tipo_norma_perla"
		inputType="TEXT"
		inputSize="3"
		maxLength="3"
		nullable="false"
		enabledOnInsert = "true"
		enabledOnEdit = "true"
		enabledOnSearch = "false"
		label="Tipo Norma Perla" />
	<fieldProperty
		name="dt_tipo_norma"
		property="dt_tipo_norma"
		inputType="TEXT"
		inputSize="10"
		nullable="false"
		formatName="date_short"
		enabledOnInsert = "true"
		enabledOnEdit = "true"
		enabledOnSearch = "false"
		label="Data della Norma" />
	<fieldProperty
		name="articolo_tipo_norma"
		property="articolo_tipo_norma"
		inputType="TEXT"
		maxLength="30"
		inputSize="30"
		nullable="false"
		enabledOnInsert = "true"
		enabledOnEdit = "true"
		enabledOnSearch = "false"
		label="Articolo" />
	<fieldProperty
		name="comma_tipo_norma"
		property="comma_tipo_norma"
		inputType="TEXT"
		maxLength="30"
		inputSize="30"
		nullable="false"
		enabledOnInsert = "true"
		enabledOnEdit = "true"
		enabledOnSearch = "false"
		label="Comma" />
	<fieldProperty
			name="fl_cancellato"
			property="fl_cancellato"
			inputType="CHECKBOX"
			enabledOnSearch="false"
			enabledOnEdit="false"
			enabledOnInsert="false"
			label="Cancellato" />


	<formFieldProperty
		name="cd_tipo_norma" />
	<formFieldProperty
		name="ds_tipo_norma" />
	<formFieldProperty
		name="cd_tipo_norma_perla" />
	<formFieldProperty
		name="numero_tipo_norma" />
	<formFieldProperty
		name="articolo_tipo_norma" />
	<formFieldProperty
		name="comma_tipo_norma" />
	<formFieldProperty
		name="dt_tipo_norma" />
	<formFieldProperty
		name="tipo_associazione" />
	<formFieldProperty
			name="fl_cancellato" />

	<columnFieldProperty
		name="cd_tipo_norma" />
	<columnFieldProperty
		name="ds_tipo_norma" />

	<findFieldProperty
		name="cd_tipo_norma" />
	<findFieldProperty
		name="ds_tipo_norma" />
	<findFieldProperty
			name="fl_cancellato" />
	<columnFieldProperty
			name="fl_cancellato" />

	<form
		name="searchtool" >
		<formFieldProperty
			name="cd_tipo_norma" />
		<formFieldProperty
			name="ds_tipo_norma"
			inputType="TEXT"
			inputSize="30" />
	</form>

	<columnSet name="restService">
		<columnFieldProperty name="cd_tipo_norma" />
		<columnFieldProperty name="ds_tipo_norma" />
		<columnFieldProperty name="cd_tipo_norma_perla" />
		<columnFieldProperty name="numero_tipo_norma" />
		<columnFieldProperty name="dt_tipo_norma" />
		<columnFieldProperty name="comma_tipo_norma" />
		<columnFieldProperty name="articolo_tipo_norma"/>
	</columnSet>
</bulkInfo>
