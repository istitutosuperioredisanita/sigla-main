<bulkInfo
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://contab.cnr.it/schema/SIGLA"
        xsi:schemaLocation="https://contab.cnr.it/schema/SIGLA https://contab.cnr.it/schema/SIGLA/BulkInfo_1_5.xsd">

    <fieldProperty
            name="esercizio"
            property="esercizio"
            inputType="TEXT"
            inputSize="22"
            maxLength="22"
            label="Esercizio" />
    <fieldProperty
            name="esercizio_res"
            property="esercizio_res"
            inputType="TEXT"
            inputSize="22"
            maxLength="22"
            label="Esercizio Ori." />
    <fieldProperty
            name="cd_centro_responsabilita"
            property="cd_centro_responsabilita"
            inputType="TEXT"
            inputSize="30"
            maxLength="30"
            label="Cd CDR" />
    <fieldProperty
            name="ti_appartenenza"
            property="ti_appartenenza"
            inputType="TEXT"
            inputSize="5"
            maxLength="1"
            label="Tipo Appartenenza" />
    <fieldProperty
            name="ti_gestione"
            property="ti_gestione"
            inputType="TEXT"
            inputSize="5"
            maxLength="1"
            label="Tipo Gestione" />
    <fieldProperty
            name="cd_elemento_voce"
            property="cd_elemento_voce"
            inputType="TEXT"
            inputSize="45"
            maxLength="45"
            label="Cd Elemento Voce" />
    <fieldProperty
            name="ds_elemento_voce"
            property="ds_elemento_voce"
            inputType="TEXT"
            inputSize="60"
            maxLength="300"
            label="Descrizione Voce"
            enabledOnSearch="true" />
    <fieldProperty
            name="cds_accertamento"
            property="cds_accertamento"
            inputType="TEXT"
            inputSize="30"
            maxLength="30"
            label="CdS Acc." />
    <fieldProperty
            name="pg_accertamento"
            property="pg_accertamento"
            inputType="TEXT"
            inputSize="10"
            maxLength="10"
            label="Prog. Acc." />
    <fieldProperty
            name="ds_accertamento"
            property="ds_accertamento"
            inputType="TEXT"
            inputSize="60"
            maxLength="500"
            label="Desc. Acc."
            enabledOnSearch="true" />
    <fieldProperty
            name="pg_modifica"
            property="pg_modifica"
            inputType="TEXT"
            inputSize="10"
            maxLength="10"
            label="Prog. Modifica" />
    <fieldProperty
            name="cd_tipo_documento_cont"
            property="cd_tipo_documento_cont"
            inputType="TEXT"
            inputSize="10"
            maxLength="10"
            label="Tipo Documento Cont" />
    <fieldProperty
            name="descrModifica"
            property="descrModifica"
            inputType="TEXT"
            inputSize="60"
            maxLength="300"
            label="Desc. Modifica" />
    <fieldProperty
            name="variazioni_piu"
            property="variazioni_piu"
            inputType="TEXT"
            formatName="it.cnr.contab.util.EuroFormat"
            maxLength="16"
            inputSize="16"
            label="Variazioni +" />
    <fieldProperty
            name="variazioni_meno"
            property="variazioni_meno"
            inputType="TEXT"
            formatName="it.cnr.contab.util.EuroFormat"
            maxLength="16"
            inputSize="16"
            label="Variazioni -" />
    <fieldProperty
            name="im_accertamento"
            property="im_accertamento"
            inputType="TEXT"
            formatName="it.cnr.contab.util.EuroFormat"
            maxLength="16"
            inputSize="16"
            label="Importo" />

    <!-- Form Fields -->
    <formFieldProperty name="esercizio" />
    <formFieldProperty name="esercizio_res" />
    <formFieldProperty name="cd_centro_responsabilita" />
    <formFieldProperty name="ti_appartenenza" />
    <formFieldProperty name="ti_gestione" />
    <formFieldProperty name="cd_elemento_voce" />
    <formFieldProperty name="ds_elemento_voce" />
    <formFieldProperty name="cds_accertamento" />
    <formFieldProperty name="pg_accertamento" />
    <formFieldProperty name="ds_accertamento" />
    <formFieldProperty name="pg_modifica" />
    <formFieldProperty name="cd_tipo_documento_cont" />
    <formFieldProperty name="descrModifica" />
    <formFieldProperty name="variazioni_piu" />
    <formFieldProperty name="variazioni_meno" />
    <formFieldProperty name="im_accertamento" />

    <!-- Find Fields -->
    <findFieldProperty name="esercizio" />
    <findFieldProperty name="esercizio_res" />
    <findFieldProperty name="cd_centro_responsabilita" />
    <findFieldProperty name="ti_appartenenza" />
    <findFieldProperty name="ti_gestione" />
    <findFieldProperty name="cd_elemento_voce" />
    <findFieldProperty name="ds_elemento_voce" />
    <findFieldProperty name="cds_accertamento" />
    <findFieldProperty name="pg_accertamento" />
    <findFieldProperty name="ds_accertamento" />
    <findFieldProperty name="pg_modifica" />
    <findFieldProperty name="cd_tipo_documento_cont" />

    <!-- Column Fields - campi da visualizzare nella tabella -->
    <columnFieldProperty name="esercizio" />
    <columnFieldProperty name="esercizio_res" />
    <columnFieldProperty name="cd_centro_responsabilita" />
    <columnFieldProperty name="cd_elemento_voce" />
    <columnFieldProperty name="ds_elemento_voce" />
    <columnFieldProperty name="cds_accertamento" />
    <columnFieldProperty name="pg_accertamento" />
    <columnFieldProperty name="ds_accertamento" />
    <columnFieldProperty name="pg_modifica" />
    <columnFieldProperty name="cd_tipo_documento_cont" />
    <columnFieldProperty name="descrModifica" />
    <columnFieldProperty name="variazioni_piu" />
    <columnFieldProperty name="variazioni_meno" />
    <columnFieldProperty name="im_accertamento" />

</bulkInfo>