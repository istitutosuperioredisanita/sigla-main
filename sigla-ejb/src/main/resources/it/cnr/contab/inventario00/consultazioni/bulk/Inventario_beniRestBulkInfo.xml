	<fieldProperty
			name="fl_bene_in_ist"
			property="fl_bene_in_ist"
			inputType="CHECKBOX"
			label="Bene in Istituto" />

	<fieldProperty
			name="dt_acquisizione"
			property="dt_acquisizione_formatted"
			inputType="ROTEXT"
			label="Data Acquisizione" />

